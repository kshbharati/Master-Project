<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@android:color/darker_gray"
        android:background="@color/cardview_dark_background"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:background="@color/teal_200"
                android:id="@+id/studentDetailHomeRecyclerStudentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Class Name:  CourseName"
                />
            <TextView
                android:padding="10dp"
                android:id="@+id/studentDetailHomeRecyclerAssignmentList"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/studentDetailHomeRecyclerAttendance"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:hint="Assignment Percent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/studentDetailAttendanceViewHolder"
                android:layout_width="match_parent"
                android:background="@android:color/holo_red_dark"
                android:minHeight="30dp"
                android:minWidth="400dp"
                android:maxHeight="30dp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/studentDetailAttendanceView"
                    android:layout_width="wrap_content"
                    android:gravity="start"
                    android:background="@android:color/holo_green_dark"

                    android:minWidth="300dp"
                    android:layout_height="match_parent"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</LinearLayout>